{
  "commands": {
    "NEXT-PAGE": [
      "Next 5"
    ]
  },
  "settings": {
    "invalid-replies": [
      "I am not sure I understood what you said."
    ],
    "general-failure": [
      "We are experiencing technical difficulties at this moment."
    ],
    "silence-timeout": 60
  },
  "conversations": {
    "welcome": {
      "steps": [{
          "type": "message",
          "messages": [
            "Hello there, I am the virtual assistant of ACME Hospital powered by Artificial Intelligence."
          ]
        },
        {
          "type": "question",
          "entity": "conversation",
          "entity-type": "Conversation",
          "messages": [
            [
              "Here is what I can do for you:"
            ]
          ],
          "display": {
            "type": "quick-reply",
            "data": [
              "Book a doctor",
              "Contact operator"
            ]
          }
        }
      ]
    },
    "help": {
      "steps": [{
        "type": "message",
        "messages": [
          [
            "If you get stuck, you can always restart our conversation by typing 'restart'",
            "Here is what I can do for you:"
          ]
        ],
        "display": {
          "type": "quick-reply",
          "data": [
            "Book a doctor",
            "Contact operator"
          ]
        }
      }]
    },
    "restart": {
      "steps": [{
          "type": "message",
          "messages": [
            "Your conversation is restarted."
          ]
        },
        {
          "type": "conversation",
          "conversation": "welcome"
        }
      ]
    },
    "contactOperator": {
      "clear-context": true,
      "steps": [{
          "type": "confirmation",
          "entity": "confirmation",
          "entity-type": "Text",
          "messages": [
            "Do you want to continue the conversation with an operator?"
          ],
          "reactions": {
            "validations": [{
              "type": "match",
              "parameters": {
                "values": [
                  "Yes",
                  "yes"
                ]
              },
              "error-message": [
                "OK, I won't contact an operator yet. Let me know what you want to do next."
              ]
            }]
          },
          "display": {
            "type": "quick-reply",
            "data": [
              "Yes",
              "No"
            ]
          }
        },
        {
          "type": "message",
          "stay-silent": true,
          "messages": [
            "I am transfering you to an operator, and I will stay silent for the next 60 minutes. If you want to get back to me, please type 'restart'."
          ]
        }
      ]
    },
    "bookDoctor": {
      "clear-context": true,
      "steps": [{
          "type": "question",
          "entity": "doctor",
          "entity-type": "Doctor",
          "messages": [
            "What's the name of the doctor that you want to see?"
          ],
          "reactions": {
            "acknowledgements": [
              "I understand that you want to meet with {{doctor.FirstName}} {{doctor.LastName}}."
            ],
            "ambiguities": [
              "I am not sure I understand the doctor you want to meet. Can you select one of the following?"
            ],
            "validations": [{
              "type": "custom",
              "parameters": {
                "data-source": {
                  "endpoint": "https://api.everlive.com/v1/niuqpjk7bubu0282/Functions/GetDoctors",
                  "selector": "$[:].ExternalId"
                },
                "condition": "{{$in doctor.ExternalId _response}}"
              },
              "error-message": [
                "Unfortunately, {{doctor.Title}} {{doctor.FirstName}} {{doctor.LastName}} is not available."
              ]
            }]
          },
          "display": {
            "type": "quick-reply"
          }
        },
        {
          "type": "question",
          "entity": "date",
          "entity-type": "Date",
          "messages": [
            "What date do you want to meet with {{doctor.FirstName}} {{doctor.LastName}}?"
          ],
          "reactions": {
            "validations": [{
              "type": "custom",
              "parameters": {
                "data-source": {
                  "endpoint": "https://api.everlive.com/v1/niuqpjk7bubu0282/Functions/GetDoctorDays?doctorId={{$encodeURI doctor.ExternalId}}",
                  "method": "GET"
                },
                "condition": "{{$in ($date date 'YYYY-MM-DD') _response}}"
              },
              "error-message": [
                "Unfortunately, {{doctor.Title}} {{doctor.FirstName}} {{doctor.LastName}} is not available on {{date}}."
              ]
            }]
          },
          "display": {
            "type": "quick-reply",
            "data-source": {
              "endpoint": "https://api.everlive.com/v1/niuqpjk7bubu0282/Functions/GetDoctorDays?doctorId={{$encodeURI doctor.ExternalId}}",
              "method": "GET"
            }
          }
        },
        {
          "type": "question",
          "entity": "time",
          "entity-type": "Time",
          "messages": [
            "What time do you want to meet {{doctor.FirstName}} {{doctor.LastName}} on {{date}}?"
          ],
          "reactions": {
            "validations": [{
              "type": "custom",
              "parameters": {
                "data-source": {
                  "endpoint": "https://api.everlive.com/v1/niuqpjk7bubu0282/Functions/GetDoctorHours?doctorId={{$encodeURI doctor.ExternalId}}&date={{$encodeURI date}}",
                  "method": "GET"
                },
                "condition": "{{$in time _response}}"
              },
              "error-message": [
                "Unfortunately, {{doctor.FirstName}} {{doctor.LastName}} is not available on {{date}} at {{time}}."
              ]
            }]
          },
          "display": {
            "type": "quick-reply",
            "data-source": {
              "endpoint": "https://api.everlive.com/v1/niuqpjk7bubu0282/Functions/GetDoctorHours?doctorId={{$encodeURI doctor.ExternalId}}&date={{$encodeURI date}}",
              "method": "GET"
            }
          }
        },
        {
          "type": "question",
          "is-explicit": true,
          "entity": "contactName",
          "entity-type": "Text",
          "messages": [
            "What are your first and last names?"
          ],
          "reactions": {
            "validations": [{
              "type": "regex",
              "parameters": {
                "value": "(\\w.+\\s).+"
              },
              "error-message": [
                "Please enter your first and last name."
              ]
            }]
          }
        },
        {
          "type": "confirmation",
          "entity": "confirmation",
          "entity-type": "Text",
          "messages": [
            "I am booking you an appointment for {{doctor.Title}} {{doctor.FirstName}} {{doctor.LastName}} on {{date}} at {{time}}. Can you please confirm that the information is correct?"
          ],
          "reactions": {
            "validations": [{
              "type": "match",
              "parameters": {
                "values": [
                  "Yes",
                  "yes"
                ]
              },
              "error-message": [
                "Let me know what you want to change before I can book you an appointment."
              ]
            }]
          },
          "display": {
            "type": "quick-reply",
            "data": [
              "Yes",
              "No"
            ]
          }
        },
        {
          "type": "webhook",
          "data-source": {
            "endpoint": "https://api.everlive.com/v1/niuqpjk7bubu0282/Appointments",
            "method": "POST",
            "headers": {
              "Content-Type": "application/json"
            },
            "payload": {
              "DoctorID": "{{doctor.ExternalId}}",
              "PatientName": "{{contactName}}",
              "Date": "{{date}}",
              "Time": "{{time}}"
            }
          }
        },
        {
          "type": "message",
          "messages": [
            "Congratulations. You have an appointment with {{doctor.Title}} {{doctor.FirstName}} {{doctor.LastName}} for {{date}} at {{time}}. See you soon!"
          ]
        }
      ]
    }
  }
}
