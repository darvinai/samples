{
  "conversations": {
    "welcome": {
      "type": "support",
      "steps": [
        {
          "type": "message",
          "messages": [
            "Здравейте, аз съм асистента на Болница ACME София и мога да ви помогна с редица проблеми."
          ]
        },
        {
          "type": "conversation",
          "conversation": "help",
          "conditions": [
            "{{$not ($has conversation) }}"
          ]
        }
      ]
    },
    "help": {
      "type": "support",
      "steps": [
        {
          "type": "message",
          "messages": [
            [
              "Ако искате да започнете разговора отначало, напишете \"рестарт\".",
              "С какво мога да ви асистирам?"
            ]
          ],
          "display": {
            "type": "quick-reply",
            "data": [
              "Запазване на час",
              "Връзка с оператор"
            ]
          }
        }
      ]
    },
    "restart": {
      "type": "support",
      "steps": [
        {
          "type": "message",
          "messages": [
            "Вашият разговор е подновен."
          ]
        },
        {
          "type": "conversation",
          "conversation": "welcome"
        }
      ]
    },
    "contactOperator": {
      "type": "goal",
      "display-name": "връзка с оператор",
      "steps": [
        {
          "type": "confirmation",
          "entity": "redirect",
          "messages": [
            "Искаш ли да прехвърля разговора ни с човек от екипа на Болница ACME София?"
          ]
        },
        {
          "conditions": [
            "{{$eq redirect false}}"
          ],
          "type": "message",
          "messages": [
            "Добре, разбирам. Няма да те прехвърлям към оператор. Кажи ми отново с какво мога да ти помогна?"
          ],
          "display": {
            "type": "quick-reply",
            "data": [
              "Запазване на час",
              "Връзка с оператор"
            ]
          }
        },
        {
          "conditions": [
            "{{$eq redirect true}}"
          ],
          "type": "message",
          "messages": [
            "Прехвърлям разговора ни към човек и ще си мълча в следващите 60 минути. Ако искаш отново да си говорим с мен, напиши 'рестарт'."
          ]
        },
        {
          "conditions": [
            "{{$eq redirect true}}"
          ],
          "type": "command",
          "command": "stay-silent 60"
        }
      ]
    },
    "bookDoctor": {
      "type": "goal",
      "display-name": "запазване на час",
      "steps": [
        {
          "type": "question",
          "entity": "doctor",
          "entity-type": "Doctor",
          "entity-display": "{{doctor.Title}} {{doctor.FirstName}} {{doctor.LastName}}",
          "messages": [
            "За кой лекар искате да си запишете час?"
          ],
          "reactions": {
            "acknowledgements": [
              "Разбирам, че искате да си запазите час за {{doctor}}."
            ],
            "ambiguities": [
              "Не съм сигурен, че разбрах за кой доктор точно искате да си запишете час. Моля изберете доктор:"
            ],
            "validations": [
              {
                "type": "custom",
                "parameters": {
                  "data-source": {
                    "endpoint": "https://sample-webhooks.nativechat.com/v1/doctor/GetDoctorDays?doctorId={{$encodeURI doctor.ExternalId}}",
                    "method": "POST",
                    "headers": {
                      "Authorization": "Basic aG9va3VzZXI6YWRtaW5AMg=="
                    }
                  },
                  "condition": "{{$ne \"[]\" ($json _response)}}"
                },
                "error-message": [
                  "За съжаление, {{doctor}} няма свободни часове за момента."
                ]
              }
            ],
            "suggestions": [
              "При {{doctor}} ли желаете да запишете час?"
            ]
          },
          "protected": true,
          "display": {
            "type": "quick-reply"
          }
        },
        {
          "type": "question",
          "entity": "date",
          "entity-type": "Date",
          "messages": [
            "За кой ден искате да ви запиша час за {{doctor}}?"
          ],
          "reactions": {
            "validations": [
              {
                "type": "custom",
                "parameters": {
                  "data-source": {
                    "endpoint": "https://sample-webhooks.nativechat.com/v1/doctor/GetDoctorDays?doctorId={{$encodeURI doctor.ExternalId}}",
                    "method": "POST",
                    "headers": {
                      "Authorization": "Basic aG9va3VzZXI6YWRtaW5AMg=="
                    }
                  },
                  "condition": "{{$in ($date date 'YYYY-MM-DD') _response}}"
                },
                "error-message": [
                  "За съжаление, {{doctor}} няма свободни часове за {{date}}."
                ]
              }
            ]
          },
          "display": {
            "type": "quick-reply",
            "data-source": {
              "endpoint": "https://sample-webhooks.nativechat.com/v1/doctor/GetDoctorDays?doctorId={{$encodeURI doctor.ExternalId}}",
              "method": "POST",
              "headers": {
                "Authorization": "Basic aG9va3VzZXI6YWRtaW5AMg=="
              }
            }
          }
        },
        {
          "type": "question",
          "entity": "time",
          "entity-type": "Time",
          "messages": [
            "За кой час искате да се видите с {{doctor}} на {{date}}?"
          ],
          "reactions": {
            "validations": [
              {
                "type": "custom",
                "parameters": {
                  "data-source": {
                    "endpoint": "https://sample-webhooks.nativechat.com/v1/doctor/GetDoctorHours?doctorId={{$encodeURI doctor.ExternalId}}&date={{$encodeURI date}}",
                    "method": "POST",
                    "headers": {
                      "Authorization": "Basic aG9va3VzZXI6YWRtaW5AMg=="
                    }
                  },
                  "condition": "{{$in time _response}}"
                },
                "error-message": [
                  "За съжаление, {{doctor}} не е свободна на {{date}} от {{time}}."
                ]
              }
            ]
          },
          "display": {
            "type": "quick-reply",
            "data-source": {
              "endpoint": "https://sample-webhooks.nativechat.com/v1/doctor/GetDoctorHours?doctorId={{$encodeURI doctor.ExternalId}}&date={{$encodeURI date}}",
              "method": "POST",
              "headers": {
                "Authorization": "Basic aG9va3VzZXI6YWRtaW5AMg=="
              }
            }
          }
        },
        {
          "type": "question",
          "entity": "contactName",
          "entity-type": "Text",
          "messages": [
            "Какви са вашите три имена, изписани на кирилица?"
          ],
          "reactions": {
            "validations": [
              {
                "type": "regex",
                "parameters": {
                  "value": "^([а-яА-Я\\-'`]*\\s){2}[а-яА-Я\\-'`]+$"
                },
                "error-message": [
                  "Опцията не е възможна. Моля, въведете вашите три имена изписани на кирилица."
                ]
              }
            ],
            "suggestions": [
              "Вашето име е {{contactName}}?"
            ]
          }
        },
        {
          "type": "entities-confirmation",
          "entity": "confirmBookDoctor",
          "entities": [
            "doctor",
            "date",
            "time"
          ],
          "messages": [
            [
              "Запазвам ви час за {{doctor}} на {{date}} от {{time}}.",
              "Моля потвърдете или изберете стойността, която искате да промените."
            ]
          ]
        },
        {
          "conditions": [
            "{{$eq confirmBookDoctor true}}"
          ],
          "protected": true,
          "type": "webhook",
          "messages": [
            "Поздравления. Имате записан час за {{doctor}} на {{date}} от {{time}}. Очакваме ви!"
          ],
          "data-source": {
            "endpoint": "https://sample-webhooks.nativechat.com/v1/persistence/saveAppointments",
            "method": "POST",
            "payload": {
              "DoctorID": "{{doctor.ExternalId}}",
              "PatientName": "{{contactName}}",
              "Date": "{{date}}",
              "Time": "{{time}}"
            }
          }
        }
      ]
    }
  },
  "settings": {
    "invalid-replies": [
      "Не съм сигурен, че ви разбирам. Може ли да повторите?"
    ],
    "general-failure": [
      "В момента имаме технически проблем, моля да ни извините."
    ],
    "previous-conversation-messages": [
      "Връщам се към {{ conversationDisplayName }}."
    ],
    "authentication": {
      "entity": "auth",
      "messages": [
        "Моля влезте в системата, за да продължите."
      ],
      "acknowledgements": [
        "Влязохте успешно в системата."
      ],
      "display": {
        "type": "login",
        "template": {
          "title": "Вход Болница АСМЕ София",
          "url": "https://bs-login.nativechat.com/login",
          "image": "https://nativechat.com/img/logo.png"
        }
      }
    },
    "persist-entities": [
      "auth"
    ]
  },
  "commands": {
    "NEXT-PAGE": [
      "Следващи 5"
    ],
    "RESTART": [
      "рестарт",
      "restart"
    ]
  }
}
